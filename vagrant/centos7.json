{
    "variables": {
      "os_type": "",
      "os_iso": "",
      "os_checksum": "",
      "checksum_type": "",
      "ssh_user": "",
      "ssh_pass": "",
      "output_vm_name": "",
      "guest_add_path": ""
      },
    "builders": [
      {
        "type": "virtualbox-iso",
        "guest_os_type": "{{user `os_type`}}",
        "iso_url": "{{user `os_iso`}}",
        "iso_checksum": "{{user `os_checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_wait_timeout": "10000s",
        "vm_name": "{{user `vm_name`}}",
        "headless": false,
        "http_directory": "http",
        "boot_wait": "10s",
        "post_shutdown_delay": "60s",
        "boot_command": [
          "<esc><wait>",
          "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
          "<enter><wait>"
        ],
        "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "{{user `vm_memory_mb`}}"],
            ["modifyvm", "{{.Name}}", "--usb", "off"],
            ["modifyvm", "{{.Name}}", "--audio", "none"]
        ]
      }
    ],
    "provisioners": [
      {
        "scripts": ["root_setup.sh"],
        "type": "shell"
      }
    ],
    "post-processors": [
      {
        "type": "vagrant",
        "output": "boxout/centos-7-x64-{{.Provider}}-minimal.box"
      }
    ]
}
